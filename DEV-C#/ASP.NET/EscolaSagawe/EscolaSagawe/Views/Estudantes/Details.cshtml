@model EscolaSagawe.Models.Estudante

@{
    ViewData["Title"] = "Details";
}

<h1>Estudante</h1>
<!--
DisplayNameFor => Visualiza o nome da coluna ou o Display criado na model.
DisplayFor => Retorna o valor da coluna.
-->

<div>
    <h4> @Html.DisplayFor(model => model.NomeCompleto) </h4>
    <hr />
    <dl class="row">
        <!-- Itens da entidade Estudante-->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataMatricula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataMatricula)
        </dd>
        <!-- ==//== ==//== ==//== -->

        <!-- Valores dos includes com Entidade Curso  -->
        <!-- Grade -->

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Matriculas)
        </dt>

        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Titulo do curso</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Matriculas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curso.Titulo)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <!-- Grade -->
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a href="/Estudantes/Details/@ViewBag.proximoEstudante">Proximo</a>
</div>
