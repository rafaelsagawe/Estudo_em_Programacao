@model Blog.Models.Post

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomePost" class="control-label"></label>
                <input asp-for="NomePost" class="form-control" />
                <span asp-validation-for="NomePost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResumoPost" class="control-label"></label>
                <input asp-for="ResumoPost" class="form-control" />
                <span asp-validation-for="ResumoPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConteudoPost" class="control-label"></label>
                <input asp-for="ConteudoPost" class="form-control" />
                <span asp-validation-for="ConteudoPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriasPost" class="control-label"></label>
                <input asp-for="CategoriasPost" class="form-control" />
                <span asp-validation-for="CategoriasPost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

                <!--btn para chamar o modal de cadastro de categoria-->
                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#ModalCategoria">Cadastrar categoria</button>

                <a asp-action="Index" class="btn btn-outline-secondary">Voltar a lista de posts</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<!-- Modal -->
<div class="modal fade" id="ModalCategoria" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TituloModalCentralizado">Criação de categoria</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary">Salvar mudanças</button>
            </div>
        </div>
    </div>
</div>