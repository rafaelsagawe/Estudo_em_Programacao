@model IEnumerable<AppEstudo.Models.CadPessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cadastar outra Pessoa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>

                        <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>

                        <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPessoa">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPessoa">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPessoa">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
