@model IEnumerable<AppEstudo.Models.Conserto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeFuncionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomePeca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDefeito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoSolucao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorMaoObra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotalConserto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFuncionario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomePeca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoDefeito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoSolucao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorMaoObra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotalConserto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
