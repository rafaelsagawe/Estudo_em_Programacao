@model EscolaSagawe.Models.EscolaViewModels.InstrutorIndexDados

@{
    ViewData["Title"] = "Instructors";
}

<h2>Instrutores</h2>

<p>
    <a asp-action="Create">Adcionar novo Inscrutor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Hire Date</th>
            <th>Office</th>
            <th>Courses</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Instrutors)
        {
            string selectedRow = "";
            if (item.ID == (int?)ViewData["InstrutorID"])
            {
                selectedRow = "table-primary";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SobreNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAdmicacao)
                </td>
                <td>
                    @if (item.Sala != null)
                    {
                        @item.Sala.Localizacao
                    }
                </td>
                <td>
                    @foreach (var curso in item.CursoAdministrados)
                    {
                        @curso.Curso.CursoID @curso.Curso.Titulo<br />
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Index" class="btn btn-outline-primary" asp-route-id="@item.ID">Selecionar</a>
                        <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@item.ID">Editar</a>
                        <a asp-action="Details" class="btn btn-outline-warning" asp-route-id="@item.ID">Detalhes</a>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.ID">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!--Bloco do botão de seleção-->
<!-- Cursos do instrutor-->
@if (Model.Cursos != null)
{
    <h3>Cursos Administrados</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Codigo</th>
            <th>Titulo</th>
            <th>Departamento</th>
        </tr>

        @foreach (var item in Model.Cursos)
        {
            string selectedRow = "";
            if (item.CursoID == (int?)ViewData["CursoID"])
            {
                selectedRow = "alert-primary";
            }
    <tr class="@selectedRow">
        <td>
            <button class="btn  btn-outline-primary">
                @Html.ActionLink("Select", "Index", new { CursoID = item.CursoID })
            </button>
        </td>
        <td>
            @item.CursoID
        </td>
        <td>
            @item.Titulo
        </td>
        <td>
            @item.Departamento.Nome
        </td>

    </tr>
        }

    </table>
}

<!-- Estudantes da Instrutor -->
@if (Model.Matriculas != null)
{
    <h3>
        Estudantes matriculados no curso
    </h3>
    <table class="table">
        <tr>
            <th>Nome</th>
            <th>Grade</th>
        </tr>
        @foreach (var item in Model.Matriculas)
        {
            <tr>
                <td>
                    @item.Estudante.NomeCompleto
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            </tr>
        }
    </table>
}
